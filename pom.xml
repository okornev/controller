        <mockito-all.version>1.8.4</mockito-all.version>
        <mockrunner.version>0.3.1</mockrunner.version>
        <httpclient.version>4.5.1</httpclient.version>
        <spring-retry.version>1.1.2.RELEASE</spring-retry.version>
